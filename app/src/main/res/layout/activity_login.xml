<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_login"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="pl.weeia.localannouncements.activity.login.LoginActivity">

    <EditText
        android:id="@+id/login_edittext_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_edittext_hint_username"/>

    <EditText
        android:id="@+id/login_edittext_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_edittext_hint_password"/>

    <Button
        android:id="@+id/login_button_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:text="@string/login_button_sign_in"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/login_textview_sign_up"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:text="@string/login_button_sign_up"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/login_textview_recover_password"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="@string/login_button_recover_password"
        android:textAlignment="center"/>

</LinearLayout>
